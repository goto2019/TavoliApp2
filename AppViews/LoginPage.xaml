<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TavoliApp.ViewModels"
             x:Class="TavoliApp.AppViews.LoginPage"
             x:DataType="viewmodels:LoginViewModel"
             BackgroundColor="White"
             Title="Login"
             NavigationPage.HasNavigationBar="False">

    <VerticalStackLayout Padding="30" Spacing="15" VerticalOptions="Center">
        <Label Text="LOGIN" FontSize="32" FontAttributes="Bold" HorizontalOptions="Center" />

        <Entry Text="{Binding Ip}" Placeholder="Inserisci IP" Keyboard="Url" />
        <Entry Text="{Binding Password}" Placeholder="Password" IsPassword="True" />

        <Label Text="{Binding Messaggio}" TextColor="Red" FontAttributes="Italic" />

        <Button Text="ACCEDI" Command="{Binding LoginCommand}" />
    </VerticalStackLayout>
</ContentPage>
