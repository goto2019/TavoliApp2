<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TavoliApp.Views.MainPage"
             x:DataType="viewmodels:MainViewModel"
             xmlns:viewmodels="clr-namespace:TavoliApp.ViewModels">
    <VerticalStackLayout Padding="30">
        <Label Text="Benvenuto nell'app Tavoli!" FontSize="24" HorizontalOptions="Center" />
        <Button Text="Premi qui" Command="{Binding SayHelloCommand}" />
        <Label Text="{Binding Greeting}" FontSize="18" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
